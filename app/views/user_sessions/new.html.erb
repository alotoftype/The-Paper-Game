<% title 'Log In' %>

<h1>Log in</h1>

<%= semantic_form_for @user_session do |form| %>
  <%= form.semantic_errors %>
  <%= form.inputs do %>
    <%= form.input :login, :required => true %>
    <%= form.input :password, :required => true %>
    <%= form.input :remember_me, :as => :boolean %>
  <% end %>
  <%= form.actions do %>
    <%= form.action :submit, :as => :button, :label => 'Log In' %>
  <% end %>
<% end %>

<% content_for :actions do %>
  <li><%= link_to 'Register', new_account_path %></li>
  <li><a href="/auth/facebook">Sign in with Facebook</a></li>
  <li><%= link_to 'Forgot password', new_account_password_reset_path %></li>
  <li><%= link_to 'Forgot login', new_account_login_reminder_path %></li>
  <% if @user_session.attempted_record &&
    !@user_session.invalid_password? &&
    !@user_session.attempted_record.confirmed? %>
    <li><%= link_to 'Resend confirmation email', resend_confirmation_account_path(@user_session.login) %></li>
  <% end %>
<% end %>